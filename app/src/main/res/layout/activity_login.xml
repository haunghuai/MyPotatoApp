<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity"
    android:fitsSystemWindows="true"
    >

    <ImageView
        android:id="@+id/myAppIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/myappicon"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mytitleicon"
        android:layout_marginTop="120dp"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:id="@+id/myAccount"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/et_shape"
        android:layout_marginTop="160dp"
       android:layout_gravity="center_horizontal"

        android:maxLines="1"
        android:hint="账号:"
        />
    <EditText
        android:id="@+id/myAccountPwd"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/et_shape"
        android:layout_marginTop="220dp"
        android:layout_gravity="center_horizontal"
        android:maxLines="1"
        android:inputType="textPassword"
        android:hint="密码:"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/myAccountPwd"
        android:layout_marginTop="270dp"
        android:layout_gravity="center_horizontal"
       >
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="记住密码"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/loginFloatingBar"
        android:layout_marginTop="340dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:borderWidth="0.0dip"
        android:tint="@color/white"
        android:src="@drawable/rightarrow"
        app:elevation="5.0dip"
        app:fabSize="normal"
        android:layout_gravity="center_horizontal"
        app:backgroundTint="@color/maincolor"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:fillViewport="true"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            >
            <TextView
                android:id="@+id/loginToRegist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="用户注册"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="right|center_vertical"
                android:layout_marginRight="50dp"
                />
            <View
                android:layout_width="2dp"
                android:layout_height="10dp"
                android:background="#d3d3d3"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="忘记密码"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="left"
                />
        </LinearLayout>


    </ScrollView>


</FrameLayout>